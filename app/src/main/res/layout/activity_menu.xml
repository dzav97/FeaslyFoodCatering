<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/chefImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/chef_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="“Hello! \nWelcome to Feasly Food Catering”"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chefImage"/>

    <EditText
        android:id="@+id/searchBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawablePadding="8dp"
        android:hint="Search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/deliveryImage"
        android:layout_width="58dp"
        android:layout_height="61dp"
        android:src="@drawable/cartoon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchBar"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/freeDeliveryText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="FREE AND FAST \nDELIVERY"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deliveryImage"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/categoriesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Categories"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/freeDeliveryText"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anda kenyang, kami turut senang."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/categoriesLabel"
        android:layout_marginTop="16dp"/>

    <!-- ImageView and Button for Paket 1 -->
    <ImageView
        android:id="@+id/imageViewBali"
        android:layout_width="106dp"
        android:layout_height="104dp"
        android:src="@drawable/bali"
        app:layout_constraintEnd_toStartOf="@id/imageViewUduk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/buttonNavigateBali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Paket 1 \nNasi Bali"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/imageViewBali"
        app:layout_constraintStart_toStartOf="@id/imageViewBali"
        app:layout_constraintTop_toBottomOf="@id/imageViewBali"
        android:layout_marginTop="8dp"/>

    <!-- ImageView and Button for Paket 2 -->
    <ImageView
        android:id="@+id/imageViewUduk"
        android:layout_width="106dp"
        android:layout_height="104dp"
        android:src="@drawable/uduk"
        app:layout_constraintEnd_toStartOf="@id/imageViewKuning"
        app:layout_constraintStart_toEndOf="@id/imageViewBali"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/buttonNavigateUduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Paket 2 \nNasi Uduk"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/imageViewUduk"
        app:layout_constraintStart_toStartOf="@id/imageViewUduk"
        app:layout_constraintTop_toBottomOf="@id/imageViewUduk"
        android:layout_marginTop="8dp"/>

    <!-- ImageView and Button for Paket 3 -->
    <ImageView
        android:id="@+id/imageViewKuning"
        android:layout_width="106dp"
        android:layout_height="104dp"
        android:src="@drawable/kuning"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageViewUduk"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"/>

    <Button
        android:id="@+id/buttonNavigateKuning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Paket 3 \nNasi Kuning"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/imageViewKuning"
        app:layout_constraintStart_toStartOf="@id/imageViewKuning"
        app:layout_constraintTop_toBottomOf="@id/imageViewKuning"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/buttonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        style="@style/ButtonHome"
        app:layout_constraintEnd_toStartOf="@+id/buttonProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cukup pesan 1 saja,\n sekotak paket akan memuaskanmu."
        android:textColor="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        style="@style/ButtonProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonHome"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintStart_toEndOf="@+id/searchBar"
        app:layout_constraintTop_toTopOf="@+id/searchBar"
        android:layout_marginStart="8dp"
        android:onClick="onSearchButtonClick"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical" />



</androidx.constraintlayout.widget.ConstraintLayout>
